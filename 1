import smtplib

def send_authenticated_email(smtp_server, port, username, password, from_address, to_address, subject, message):
    try:
        # Set up the SMTP connection
        server = smtplib.SMTP(smtp_server, port)
        server.ehlo()  # Identify yourself to the SMTP server
        server.starttls()  # Upgrade the connection to secure (if supported)
        server.ehlo()

        # Log in to the server
        server.login(username, password)

        # Construct the email headers and body
        email_message = f"""\
From: {from_address}
To: {to_address}
Subject: {subject}

{message}
"""
        # Send the email
        server.sendmail(from_address, [to_address], email_message)
        print("Email sent successfully!")

        # Close the SMTP connection
        server.quit()
    except Exception as e:
        print(f"Failed to send email: {e}")

# Configuration
smtp_server = "10.2.2.3"
port = 25
username = "your_username"
password = "your_password"
from_address = "spoofed@example.com"
to_address = "target@example.com"
subject = "Test Email with Authentication"
message = "This is a test email with a spoofed sender address, authenticated with SMTP credentials."

# Send the authenticated email
send_authenticated_email(smtp_server, port, username, password, from_address, to_address, subject, message)
